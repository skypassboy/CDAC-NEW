package office.utility;

public class Date {
	private int dd;
	private int mm;
	private int yy;	
	
	public Date() {
		//super();
		// TODO Auto-generated constructor stub
		this.dd = 1;
		this.mm = 1;
		this.yy = 1970;	
	}

	public Date(int dd, int mm, int yy) {
		super();
		this.dd = dd;
		this.mm = mm;
		this.yy = yy;
	}

	public int getYy()
	{
		return yy;
	}
	
	public void setYy(int yy) {
		this.yy = yy;
	}
	


	public void showDate()
	{
		System.out.println(dd+"/"+mm+"/"+yy);
	}

}
